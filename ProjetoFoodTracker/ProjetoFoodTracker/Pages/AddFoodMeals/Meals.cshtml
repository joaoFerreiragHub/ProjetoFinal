@page
@model ProjetoFoodTracker.Pages.MealsModel
@{
}

<form method="post" asp-page-handler="AddMeal">
    <label class="col-sm-3 col-form-label">Insert Meal:</label>
    <br />

    Meal Name: <div class="col-sm-6"><input type="text" class="form-control" asp-for="meals.Name"></div>
    Meal Start: <div class="col-sm-6"><input type="datetime-local" class="form-control" asp-for="meals.MealStart"></div>
    Meal End: <div class="col-sm-6"><input type="datetime-local" class="form-control" asp-for="meals.MealEnded"></div>
    <br />
    <button type="submit" class="btn btn-primary mr-2">Submeter</button>
</form>
