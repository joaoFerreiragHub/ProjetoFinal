@page
@model ProjetoFoodTracker.Pages.MyFood.CreateModel

@{
    ViewData["Title"] = "Add New Foods";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <strong>Success! </strong> @TempData["Success"]
    </div>
    <br />
}
@if (TempData["Failed"] != null)
{
    <div class="alert alert-danger">
        <strong>Failed! </strong> @TempData["Failed"]
    </div>
    <br />
}
<h1>Add New Foods</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="PostAsync">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Food.FoodName" class="control-label"></label>
                <input asp-for="Food.FoodName" class="form-control" />
                <select class="w-100 form-control" asp-for="Food.Category.CategoryName" asp-items="Model.CategoryOptions">
                    <option selected>Please select</option>
                </select>
                <span asp-validation-for="Food.FoodName" class="text-danger"></span>
                <td>
            </div>
            <table class="table">
                <tr>
                    <th>Actions:</th>
                </tr>
                @for (var i = 0; i < Model.ActionsList.Count(); i++)
                {
                    <tr>
                        <td>
                            <input id="btn-check" type="checkbox" value="@Model.ActionsList[i].ActionName" name="actionsList" />
                            <label id="lab1" asp-for="ActionsList"> @Model.ActionsList[i].ActionName</label>
                        </td>
                    </tr>
                }
            </table>
            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
        <br />
    </div>
    <div class="form-group">
    </div>
</div>
<div>
    <a class="btn btn-danger" type="submit"asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
